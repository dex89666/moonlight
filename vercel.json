{
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "apps/web/package.json", "use": "@vercel/static-build", "config": { "distDir": "apps/web/dist" } }
  ],
  "env": {
    "FREE_MESSAGES_PER_DAY": "2",
    "PAYMENTS_PROVIDER": "telegram",
    "MODEL": "gpt-4o-mini"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
